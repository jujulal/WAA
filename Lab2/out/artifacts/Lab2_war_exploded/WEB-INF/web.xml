<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>addNameServlet</servlet-name>
        <servlet-class>mum.lab.names.AddNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addNameServlet</servlet-name>
        <url-pattern>/addName</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>allNamesServlet</servlet-name>
        <servlet-class>mum.lab.names.AllNamesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allNamesServlet</servlet-name>
        <url-pattern>/showNames</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteName</servlet-name>
        <servlet-class>mum.lab.names.RemoveNameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteName</servlet-name>
        <url-pattern>/deleteName</url-pattern>
    </servlet-mapping>
</web-app>